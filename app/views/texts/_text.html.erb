<div class="card-box col-12 col-md-6 col-lg-4">
  <%= link_to text do %>
    <div class="card content-card border-dark mb-3">
      <div class="card-header p-0">
        <img loading="lazy" alt="<%= text.title %>" class="img-fluid" src="https://d5izmuz0mcjzz.cloudfront.net/texts/no_image.jpg">
      </div>
      <div class="card-body">
        <p id="text-<%= text.id %>">
          <% if text.read_by?(current_user) %>
           <%= render "read", text: text %>
          <% else %>
           <%= render "unread", text: text %>
          <% end %>
        </p>
        <p class="card-title mt-3"><%= text.title %></p>
        <p>【<%= text.genre %>】</p>
      </div>
    </div>
  <% end %>
</div>
